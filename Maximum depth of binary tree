//recursive way with TC=O(N) and SC=O(H) recursive stack space
class Solution {
public:
    int maxDepth(TreeNode* root) { 
        //recursive solution with TC=O(N) and SC=O(H) that is recursive stack space
        if(!root) return 0;
        int lh=maxDepth(root->left);
        int rh=maxDepth(root->right);
        return 1+max(lh,rh);
    }
};

//iterative method with TC=O(N) and SC=O(N) for queue data structure
class Solution {
public:
    int maxDepth(TreeNode* root) {
        if(!root) return 0;
        queue<TreeNode*>q; int ans=0;
        q.push(root);  TreeNode*node;
        while(!q.empty())
        {
            int n=q.size(); ans++;
            for(int i=0;i<n;i++)
            {  
                node=q.front();
                q.pop();
                if(node->left!=NULL) q.push(node->left);
                if(node->right!=NULL) q.push(node->right);
            } 
        }
        return ans;
    }
};

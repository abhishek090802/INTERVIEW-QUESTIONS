//level order traversal TC=O(N) and SC=O(N) for queue data structure basically an local variable flag keeps hold on the zig zag traversal in the BT
class Solution {
public:
    vector<vector<int>> zigzagLevelOrder(TreeNode* root) {
        vector<vector<int>>ans;
        bool flag=1;
        if(!root) return {};
        queue<TreeNode*>q;
        q.push(root);
        while(!q.empty())
        {
            int n=q.size();
            vector<int>level(n);
            for(int i=0;i<n;i++)
            {
                TreeNode*node=q.front();
                q.pop();
                int index=(flag) ?i:n-1-i;
                level[index]=node->val;
                if(node->left)
                q.push(node->left);
                if(node->right)
                q.push(node->right);
            }
            ans.push_back(level);
            flag=!flag;
        }
        return ans;
        }
};
